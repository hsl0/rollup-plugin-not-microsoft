{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "root": true,
    "env": {
        "node": true,
        "es6": true
    },
    "ignorePatterns": [
        "*.js"
    ]
}